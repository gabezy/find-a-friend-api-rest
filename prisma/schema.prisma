// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id               String @id @default(uuid())
  name             String
  email            String @unique
  person_in_charge String
  cep              String
  address          String
  whatsapp         String
  password         String
  pet              Pet[]

  @@map("orgs")
}

model Pet {
  id           String        @id @default(uuid())
  name         String
  about        String
  age          String
  size         String
  energy       String
  independence String
  environment  String
  created_at   DateTime      @default(now())
  updated_at   DateTime?
  photos       Photo[]
  requirements Requirement[]
  Org          Org?          @relation(fields: [orgId], references: [id])
  orgId        String?

  @@map("pets")
}

model Photo {
  id    String  @id @default(uuid())
  data  Bytes
  Pet   Pet?    @relation(fields: [petId], references: [id])
  petId String?

  @@map("photos")
}

model Requirement {
  id          String  @id @default(uuid())
  description String
  Pet         Pet?    @relation(fields: [petId], references: [id])
  petId       String?

  @@map("requirements")
}
